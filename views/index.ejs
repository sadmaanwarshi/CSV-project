<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random User Data Generator</title>
    <link rel="stylesheet" href="./styles/style.css">
</head>
<body>

    <header></header>
    
    <div class="container">
    <h1>Random User Data Generator</h1>
    <form id="userForm" action="/generate-users" method="post">
        <label for="count">Number of Users:</label>
        <input type="number" id="count" name="count" required>
        <button type="submit">Generate</button>
    </form>

    <div id="result">
        <% if (message) { %>
            <p><%= message %></p>
            <a id="downloadLink" href="<%= filePath %>" download="users.csv">Download CSV</a>
        <% } %>
    </div>
</div>
    <script>
        // Optionally, you can still include JavaScript here if you want additional dynamic features
        // Currently, this app handles form submission and CSV download without JavaScript
    </script>
</body>
</html>
